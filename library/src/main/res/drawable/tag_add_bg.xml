<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充 -->
    <solid android:color="#ffffff" />
    <!--  描边-->
    <stroke
        android:width="0.5dp"
        android:color="#e9e9e9" />  <!--定义描边的宽度和描边的颜色值-->
