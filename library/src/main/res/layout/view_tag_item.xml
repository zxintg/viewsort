<?xml version="1.0" encoding="utf-8"?>
<com.zxin.sort.widget.TipItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/tag_add_bg"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/tagview_delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/order_checkout_close"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tagview_title"
        android:textSize="16sp"
        android:textColor="@color/color_333333"
        android:layout_margin="8dp"
        tools:text="标签"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        />


</com.zxin.sort.widget.TipItemView>